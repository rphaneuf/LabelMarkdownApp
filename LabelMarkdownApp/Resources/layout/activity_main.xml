
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top|center"
    android:orientation="vertical">
    <EditText
        android:text="Enter UPC #"
        android:layout_width="195.5dp"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/UPCInput"
        app:backgroundTintMode="src_over"
        android:background="@android:color/darker_gray"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:padding="8dp"
        android:inputType="text" />
    <Button
        android:text="Search"
        android:layout_width="151.0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_red_light"
        android:id="@+id/SearchBtn" />
    <TextView
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/InvalidInputTxt"
        android:textColor="#ffb71c1c"/>
    <TextView
        android:text="Descripton:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/DescriptionTxt"
        android:textColor="@android:color/black"
        android:background="@color/browser_actions_bg_grey"
        android:padding="5dp"
        android:visibility="invisible"/>

    <TextView
        android:text="Price:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/PriceTxt"
        android:textColor="@android:color/black"
        android:background="@color/browser_actions_bg_grey"
        android:padding="5dp"
        android:visibility="invisible"/>
    <TextView
        android:text="Unit of Measure:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/UOMTxt"
        android:textColor="@android:color/black"
        android:background="@color/browser_actions_bg_grey"
        android:layout_marginBottom="10dp"
        android:padding="5dp"
        android:visibility="invisible"/>
    <EditText
        android:text="Enter Markdown #"
        android:layout_width="195.5dp"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/MarkdownInput"
        app:backgroundTintMode="src_over"
        android:background="#ffb2b0af"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:padding="5dp"
        android:inputType="text"
        android:visibility="invisible"/>
    <CheckBox
        android:text="%"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/PercentChck"
        android:visibility="invisible"/>
    <CheckBox
        android:text="$"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/DollarChck"
        android:visibility="invisible" />
    <Button
        android:text="Generate"
        android:layout_width="151.0dp"
        android:layout_height="wrap_content"
        android:id="@+id/GenerateBtn"
        android:padding="8dp"
        android:visibility="invisible"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_red_light"/>
    <TextView
        android:text="New Price:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/NewPriceTxt"
        android:textColor="@android:color/black"
        android:background="@color/browser_actions_bg_grey"
        android:visibility="invisible"
        android:padding="5dp"/>
    <TextView
        android:text="New UPC:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/NewUPCTxt"
        android:textColor="@android:color/black"
        android:background="@color/browser_actions_bg_grey"
        android:visibility="invisible"
        android:padding="5dp"/>
    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:id="@+id/BarcodeImage"
        android:layout_below="@+id/plain_text_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:visibility="invisible"
        android:padding="10dp"/>
</LinearLayout>